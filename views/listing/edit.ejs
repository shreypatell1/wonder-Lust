<% layout("/layouts/boilarplate") -%>

<div class="row">
  <div class="col-8 offset-2">
    <form
      method="POST"
      action="/listings/<%= biodata._id %>?_method=PUT"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <br />
      <h3><i>Write your detalis</i></h3>

      <div class="mt-3">
        <label for="title" class="form-lable">Title</label>
        <input placeholder="enter your title" value="<%" ="biodata.title" % />
        name="listing[title]" type="text" class="form-control" required>
        <div class="valid-feedback">Exemplary!</div>
        <div class="invalid-feedback">Kindly provide a valid title.</div>
      </div>

      <div class="mt-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          placeholder="enter you want to write"
          name="listing[description]"
          required
          type="text"
          class="form-control"
        >
<%=biodata.description %></textarea
        >
        <div class="valid-feedback">Superb!</div>
        <div class="invalid-feedback">Kindly provide a valid description.</div>
      </div>

      <div class="mt-3">
        Original Lisitng Image <br />
        <img src="<%= orignalImageUrl %>" />
      </div>

      <div class="mt-3">
        <label for="image" class="form-lable">Upload New Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
        <div class="valid-feedback">Splendid!</div>
        <div class="invalid-feedback">Kindly provide a valid image URL.</div>
      </div>

      <div class="mt-3">
        <label for="price" class="form-lable">price</label>
        <input placeholder="enter price" value="<%" ="biodata.price" % />
        name="listing[price]" type="number" class="form-control"required>
        <div class="valid-feedback">Outstanding!</div>
        <div class="invalid-feedback">Kindly provide a valid price.</div>
      </div>

      <div class="mt-3">
        <label for="location" class="form-lable">location</label>
        <input placeholder="enter location" value="<%" ="biodata.location" % />
        name="listing[location]" type="text" class="form-control"required>
        <div class="valid-feedback">Perfect!</div>
        <div class="invalid-feedback">Kindly provide a valid location.</div>
      </div>

      <div class="mt-3">
        <label for="country" class="form-lable">country</label>
        <input placeholder="enter country" value="<%" ="biodata.country%" />
        name="listing[country]" type="text" class="form-control"required>
        <div class="valid-feedback">Excellent!</div>
        <div class="invalid-feedback">Kindly provide a valid country.</div>
      </div>
      <br />
      <button class="btn btn-dark edit-btn">Click Here...</button>
    </form>
    <br />
  </div>
</div>
